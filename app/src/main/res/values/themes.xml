<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Airmonitorble" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme customization -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Airmonitorble" parent="Base.Theme.Airmonitorble" />

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonPositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonNegative</item>
    </style>

    <style name="DialogButtonPositive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#FF0000</item> <!-- Red Send -->
    </style>

    <style name="DialogButtonNegative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#AAAAAA</item> <!-- Gray Cancel -->
    </style>
</resources>
