<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F9F9F9"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:text="GasMonkey Dashboard"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Logo" />
        </LinearLayout>

        <TextView
            android:text="Here you can monitor gas and air quality readings in real time."
            android:textColor="#6C6C6C"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Gas and Air Stats Cards -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- LPG -->
            <LinearLayout
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:text="LPG Levels"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"

                    android:layout_height="14dp"
                    android:layout_width="14dp"/>

                <TextView
                    android:id="@+id/lpgText"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="#E53935"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="8dp"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>
            </LinearLayout>

            <!-- CO₂ -->
            <LinearLayout
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="CO₂ Levels"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>

                <TextView
                    android:id="@+id/co2Text"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="#FF7043"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="8dp"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>
            </LinearLayout>

            <!-- NH₃ -->
            <LinearLayout
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="NH₃ Levels"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>

                <TextView
                    android:id="@+id/nh3Text"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="#FF8A65"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="8dp"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>
            </LinearLayout>

            <!-- Temperature -->
            <LinearLayout
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Temperature"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>

                <TextView
                    android:id="@+id/tempText"
                    android:text="-- °C"
                    android:textSize="22sp"
                    android:textColor="#FF5722"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="8dp"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>
            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Humidity"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>

                <TextView
                    android:id="@+id/humText"
                    android:text="-- %"
                    android:textSize="22sp"
                    android:textColor="#29B6F6"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="8dp"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>
            </LinearLayout>

            <!-- AQI -->
            <LinearLayout
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Air Quality Index"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>

                <TextView
                    android:id="@+id/aqiText"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="#8BC34A"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="8dp"
                    android:layout_height="14dp"
                    android:layout_width="14dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
