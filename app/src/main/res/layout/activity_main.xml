<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/connectBleBtn"
        android:text="Connect to BLE Device"
        android:textColor="#FFFFFF"
        android:backgroundTint="#B00020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/scanWifiBtn"
        android:text="Scan for Wi-Fi Networks"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/goToDashboardBtn"
        android:text="Go to Dashboard"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E53935"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/goToHistoryBtn"
        android:text="Go to History"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E53935"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/statusText"
        android:text="Status: Idle"
        android:textColor="#FF0000"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/wifiListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
</LinearLayout>
